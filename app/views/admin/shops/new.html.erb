<% if @shop.errors.full_messages.any? %>
    <% @shop.errors.full_messages.each do |error_message| %>
        <%= error_message %> <br />
    <% end %>
<% end %>

<%= form_for [:admin, @shop] do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %></br>

    <%= f.label :address %>
    <%= f.text_field :address %></br>

    <%= f.label :logo %>
    <%= f.file_field :logo %>

    <%= f.submit %>
<% end %>
